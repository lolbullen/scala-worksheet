<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.scalaide.worksheet.editor.ScriptEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="sc"
            icon="icons/sample.gif"
            id="org.scalaide.worksheet.editors.ScriptEditor"
            name="Scala Script editor">
      </editor>
   </extension>
   <extension point="org.scala-ide.sdt.core.sourcefileprovider">
    <provider
      class="org.scalaide.worksheet.SourceFileProvider"
      file_extension="sc">
    </provider>
  </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.scalaide.worksheet.commands.category"
            name="Worksheet commands">
      </category>
      <command
            categoryId="org.scalaide.worksheet.commands.category"
            id="org.scalaide.worksheet.commands.evalScript"
            name="Evaluate Script">
      </command>
      <command
            categoryId="org.scalaide.worksheet.commands.category"
            defaultHandler="org.scalaide.worksheet.handlers.Format"
            id="org.scalaide.worksheet.commands.format"
            name="Format">
      </command>
      <command
            categoryId="org.scalaide.worksheet.commands.category"
            id="org.scalaide.worksheet.commands.clearResults"
            name="Clear Results">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.scalaide.worksheet.handlers.EvalScript"
            commandId="org.scalaide.worksheet.commands.evalScript">
      </handler>
      <handler
            class="org.scalaide.worksheet.handlers.ClearResults"
            commandId="org.scalaide.worksheet.commands.clearResults">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.scalaide.worksheet.commands.evalScript"
            contextId="org.scalaide.worksheet.editorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+B">
      </key>
      <key
            commandId="org.scalaide.worksheet.commands.format"
            contextId="org.scalaide.worksheet.editorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+F">
      </key>
      <key
            commandId="org.scalaide.worksheet.commands.clearResults"
            contextId="org.scalaide.worksheet.editorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+C">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.scala-ide.sdt.core.wizards"
            class="org.scalaide.worksheet.wizards.NewWorksheetWizard"
            finalPerspective="org.scala-ide.sdt.core.perspective"
            icon="icons/sample.gif"
            id="org.scalaide.worksheet.wizards.newWorksheet"
            name="Scala Worksheet"
            project="false">
            <description>Create a Scala worksheet</description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.scala-ide.sdt.core.perspective">
         <newWizardShortcut
               id="org.scalaide.worksheet.wizards.newWorksheet">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            description="Scala worksheet editor"
            id="org.scalaide.worksheet.editorScope"
            name="Editing Scala Worksheet"
            parentId="org.eclipse.ui.textEditorScope">
      </context>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.scalaide.worksheet.properties.Preferences"
            id="org.scalaide.worksheet.preferences"
            name="Scala Worksheet">
      </page>
      <page
            category="org.scalaide.worksheet.preferences"
            class="org.scalaide.worksheet.properties.SyntaxColoringPreferencePage"
            id="org.scalaide.worksheet.preferences.syntaxColoring"
            name="SyntaxColoring">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.scalaide.worksheet.properties.ColorPreferenceInitializer">
      </initializer>
      <initializer
            class="org.scalaide.worksheet.properties.WorksheetPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.core.filebuffers.documentSetup">
      <participant
            class="org.scalaide.worksheet.editor.ScriptDocumentSetupParticipant"
            extensions="sc">
      </participant>
   </extension>

   <extension
         id="problem"
         name="Scala Problem"
         point="org.eclipse.core.resources.markers">
      <super type="org.eclipse.core.resources.problemmarker"/>
      <super type="org.eclipse.core.resources.textmarker"/>
      <super type="org.eclipse.jdt.core.problem"/>
      <persistent value="true"/>
   </extension>

</plugin>
